<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    android:background="@color/cardBackgroundColor"
    tools:ignore="UnusedAttribute">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_gap_margin_small"
        android:gravity="bottom"
        tools:ignore="InefficientWeight">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="NestedWeights">
            <com.github.drunlin.guokr.widget.RichEditorView
                android:id="@+id/edit_editor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/cardBackgroundColor"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/vertical_gap_margin_small"
                android:background="@color/colorPrimary"/>
        </LinearLayout>
        <com.github.drunlin.guokr.widget.TintImageButton
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/vertical_gap_margin_small"
            android:paddingBottom="@dimen/vertical_gap_margin_small"
            android:paddingLeft="@dimen/horizontal_gap_margin"
            android:paddingRight="@dimen/horizontal_gap_margin"
            android:src="@drawable/ic_send"
            app:tint="@color/colorPrimary"
            tools:tint="@color/colorPrimary"
            android:background="?selectableItemBackgroundBorderless"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_gap_margin_small"
        android:baselineAligned="false"
        tools:ignore="RtlHardcoded">
        <HorizontalScrollView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <com.github.drunlin.guokr.widget.TintImageButton
                    android:id="@+id/ck_format_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackgroundBorderless"
                    app:tint="@color/textColorPrimary"
                    android:src="@drawable/ic_format_bold"/>
                <com.github.drunlin.guokr.widget.TintImageButton
                    android:id="@+id/ck_format_italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/horizontal_gap_margin_small"
                    android:background="?selectableItemBackgroundBorderless"
                    app:tint="@color/textColorPrimary"
                    android:src="@drawable/ic_format_italic"/>
                <com.github.drunlin.guokr.widget.TintImageButton
                    android:id="@+id/btn_insert_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/horizontal_gap_margin_small"
                    android:background="?selectableItemBackgroundBorderless"
                    app:tint="@color/textColorPrimary"
                    android:src="@drawable/ic_insert_photo"/>
                <com.github.drunlin.guokr.widget.TintImageButton
                    android:id="@+id/btn_insert_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/horizontal_gap_margin_small"
                    android:background="?selectableItemBackgroundBorderless"
                    app:tint="@color/textColorPrimary"
                    android:src="@drawable/ic_insert_link"/>
                <com.github.drunlin.guokr.widget.TintImageButton
                    android:id="@+id/ck_format_quote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/horizontal_gap_margin_small"
                    android:background="?selectableItemBackgroundBorderless"
                    app:tint="@color/textColorPrimary"
                    android:src="@drawable/ic_format_quote"/>
                <com.github.drunlin.guokr.widget.TintImageButton
                    android:id="@+id/ck_format_list_bulleted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/horizontal_gap_margin_small"
                    android:background="?selectableItemBackgroundBorderless"
                    app:tint="@color/textColorPrimary"
                    android:src="@drawable/ic_format_list_bulleted"/>
                <com.github.drunlin.guokr.widget.TintImageButton
                    android:id="@+id/ck_format_list_numbered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/horizontal_gap_margin_small"
                    android:background="?selectableItemBackgroundBorderless"
                    app:tint="@color/textColorPrimary"
                    android:src="@drawable/ic_format_list_numbered"/>
                <com.github.drunlin.guokr.widget.TintImageButton
                    android:id="@+id/btn_format_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/horizontal_gap_margin_small"
                    android:background="?selectableItemBackgroundBorderless"
                    app:tint="@color/textColorPrimary"
                    android:src="@drawable/ic_format_clear"/>
            </LinearLayout>
        </HorizontalScrollView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_gap_margin">
            <com.github.drunlin.guokr.widget.TintImageButton
                android:id="@+id/btn_undo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackgroundBorderless"
                app:tint="@color/textColorPrimary"
                android:src="@drawable/ic_undo_black"/>
            <com.github.drunlin.guokr.widget.TintImageButton
                android:id="@+id/btn_redo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_gap_margin"
                android:background="?selectableItemBackgroundBorderless"
                app:tint="@color/textColorPrimary"
                android:src="@drawable/ic_redo_black"/>
            <com.github.drunlin.guokr.widget.TintImageButton
                android:id="@+id/btn_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_gap_margin"
                android:background="?selectableItemBackgroundBorderless"
                app:tint="@color/textColorPrimary"
                android:src="@drawable/ic_clear"/>
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_height="60dp"
        android:layout_marginTop="@dimen/vertical_gap_margin_small"
        android:visibility="gone"
        tools:visibility="visible"
        tools:listitem="@layout/item_thumbnail"/>
</LinearLayout>
