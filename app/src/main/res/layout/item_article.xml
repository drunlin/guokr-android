<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/cardBackgroundColor"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:contentPaddingTop="@dimen/vertical_gap_margin_small"
    app:contentPaddingBottom="@dimen/vertical_gap_margin_small"
    app:contentPadding="@dimen/horizontal_gap_margin"
    android:foreground="?selectableItemBackground">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.github.drunlin.guokr.widget.ArticleLabelsView
            android:id="@+id/labels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_gap_margin_small"/>
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_gap_margin"
            android:layout_marginBottom="@dimen/vertical_gap_margin_small"
            tools:text="文章标题"
            style="@style/AppTheme.PrimaryText"/>
        <com.github.drunlin.guokr.widget.AutoWrapLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.github.drunlin.guokr.widget.ArticleAuthorsView
                android:id="@+id/text_authors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="作者"
                style="@style/AppTheme.HintText"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_date"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/horizontal_gap_margin"
                    tools:text="2015-11-03 18:00"
                    style="@style/AppTheme.HintText"
                    tools:ignore="RtlHardcoded"/>
                <com.github.drunlin.guokr.widget.TintImageButton
                    android:id="@+id/btn_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/ic_comment"
                    app:tint="@color/buttonColorNormal"
                    tools:tint="@color/buttonColorNormal"
                    android:background="?selectableItemBackgroundBorderless"/>
                <TextView
                    android:id="@+id/text_replies_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    tools:text="20"
                    style="@style/AppTheme.ImageButtonLabel"/>
            </LinearLayout>
        </com.github.drunlin.guokr.widget.AutoWrapLayout>
        <com.github.drunlin.guokr.widget.BitmapImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_gap_margin"
            android:adjustViewBounds="true"
            android:background="#5DDD"
            tools:src="@drawable/img_png"/>
        <TextView
            android:id="@+id/text_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_gap_margin"
            android:layout_marginBottom="@dimen/vertical_gap_margin_small"
            tools:text="这是长长的文章内容这是长长的文章内容这是长长的文章内容这是长长的文章内容这是长长的文章内容这是长长的文章内容这是长长的文章内容这是长长的文章内容这是长长的文章内容这是长长的文章内容"
            style="@style/AppTheme.SecondaryText"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
