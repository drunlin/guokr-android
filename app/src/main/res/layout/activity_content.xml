<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ArticleActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:expanded="false"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:layout_scrollFlags="scroll|enterAlways|snap"/>
    </android.support.design.widget.AppBarLayout>

    <com.github.drunlin.guokr.widget.SwipeLoadLayout
        android:id="@+id/swipe_load_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.github.drunlin.guokr.activity.ContentActivity$ContentBehavior">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.github.drunlin.guokr.widget.SwipeLoadLayout>

    <FrameLayout
        android:id="@+id/floating_menu_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:orientation="vertical"
        android:visibility="gone"
        android:clickable="true"
        app:layout_behavior="com.github.drunlin.guokr.activity.ContentActivity$FloatingMenuBehavior"
        tools:ignore="RtlHardcoded"/>

    <FrameLayout
        android:id="@+id/container_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.github.drunlin.guokr.activity.ContentActivity$ReplyBoxBehavior"/>
</android.support.design.widget.CoordinatorLayout>
